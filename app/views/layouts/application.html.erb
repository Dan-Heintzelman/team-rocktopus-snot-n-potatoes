<!DOCTYPE html>
<html>
<head>
  <title>TeamRocktopusSnotNPotatoes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Bootstrap header -->
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
       <%=image_tag("potato.png", class: 'potato')%>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'Home', root_path %></li>
          <% if logged_in? %>

            <li><%= link_to 'Profile', user_path(current_user) %></li>

          <% end %>
          <li >
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Genres
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to "Action", movie_genres_path("action")%></li>
              <li><%= link_to "Adventure", movie_genres_path("adventure")%></li>
              <li><%= link_to "Animation", movie_genres_path("animation")%></li>
              <li><%= link_to "Comedy", movie_genres_path("comedy")%></li>
              <li><%= link_to "Crime", movie_genres_path("crime")%></li>
              <li><%= link_to "Drama", movie_genres_path("drama")%></li>
              <li><%= link_to "Fantasy", movie_genres_path("fantasy")%></li>
              <li><%= link_to "Horror", movie_genres_path("horror")%></li>
              <li><%= link_to "Mystery", movie_genres_path("mystery")%></li>
              <li><%= link_to "Romance", movie_genres_path("romance")%></li>
              <li><%= link_to "Thriller", movie_genres_path("thriller")%></li>
              <li><%= link_to "Western", movie_genres_path("western")%></li>
            </ul>
          </li>

        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <li><%= link_to 'Logout', logout_path, method: :delete %></li>
          <% else %>
          <li><%= link_to 'Login',  login_path %></li>
          <% end %>

        </ul>
      </div>

    </div>
  </nav>

<%= yield %>

</body>
</html>
